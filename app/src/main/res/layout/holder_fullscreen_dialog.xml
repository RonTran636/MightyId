<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/accent_black">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/preview_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:src="@drawable/testing"
                android:scaleType="fitCenter" />
            <ImageView
                android:id="@+id/back_space"
                android:layout_width="@dimen/default_action_size"
                android:layout_height="@dimen/default_action_size"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_margin="@dimen/default_margin"
                android:src="@drawable/ic_baseline_clear_24"
                app:tint="@color/accent_white" />
            <ImageView
                android:id="@+id/action_save_image"
                android:layout_width="@dimen/default_action_size"
                android:layout_height="@dimen/default_action_size"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="@dimen/default_margin"
                android:src="@drawable/ic_save"
                app:tint="@color/accent_white" />
        </RelativeLayout>
    </RelativeLayout>
</layout>